  <div class="panel-separator"></div>
  <section class="panel-pane pane-entity-field pane-node-field-ingredients-1 block">
    <div class="block-inner clearfix">
      <h2 class="pane-title block-title">Ingredients</h2>
      <div class="block-content">
        <div class="field field-name-field-ingredients-1 field-type-text field-label-hidden view-mode-_custom_display">
          <div class="field-items">
            <div class="field-item even" property="schema:ingredients">8 medium all-purpose potatoes</div>
            <div class="field-item odd" property="schema:ingredients">1 head curly kale, chopped fine</div>
            <div class="field-item even" property="schema:ingredients">1-1/4 cups milk</div>
            <div class="field-item odd" property="schema:ingredients">6 scallions, diced fine</div>
            <div class="field-item even" property="schema:ingredients">1 tablespoon chopped parsley</div>
            <div class="field-item odd" property="schema:ingredients">1/2 teaspoon chopped fresh thyme</div>
            <div class="field-item even" property="schema:ingredients">8 tablespoons butter, divided</div>
          </div>
        </div>
      </div>
    </div>
    </section>
    <div class="panel-separator"></div>
    <div class="panel-pane pane-block pane-advertising-advertising-107802 no-title block">
      <div class="block-inner clearfix">
        <div class="block-content">

      <!-- Ad: Node Injected 336x280 Top -->

          <div id="dfp-ad-107802" class="sitewide-rectangle-ad">
